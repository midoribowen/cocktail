<div class='checkoutWrapper'>
  {{#if getIngredients}}
    <div class="guestsDiv">
      <div class="outOfRange">
        {{#if outOfRange}}
        <div>
          <span>Please type a number between 1 and 1000.</span>
        </div>
        {{/if}}
        <span class="guestsSpan">Guests Count</span>
        <br>
        {{input type="text" class="guestInput" min="1" max="1000" value=updateGuests id="updateGuests" placeholder="1 - 1000" key-up="updateGuests" oninput="updateGuests" class="form-control guestForm"}}
      </div>
    </div>

    <ul class="removeFromCart">
      {{#each shoppingCart.recipes as |recipe|}}
      <li>{{recipe.name}} <span {{action 'removeFromCart' recipe bubbles=false}}><i class="fa fa-times-circle"></i></span> </li>
      {{/each}}
    </ul>

    <ul class='ingredientList'>
      {{#each getIngredients as |ingredient|}}
      <li>{{ingredient.amount}} {{ingredient.of}}</li>
      {{/each}}
    </ul>

    {{#link-to 'print' class='printLink'}}Printable Version <i class="fa fa-print"></i>{{/link-to}}
    {{else}}
      <p>
        There are no drinks on your list yet.
      </p>
  {{/if}}
</div>
